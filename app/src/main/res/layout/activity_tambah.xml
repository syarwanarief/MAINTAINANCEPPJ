<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Tambah"
    android:background="#FFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#6777">

        <EditText
            android:id="@+id/text_isi"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Ketik disini..."
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:lines="4"
            android:maxLength="100"
            android:gravity="top|left"
            android:textColor="#000"
            android:scrollHorizontally="false"
            android:textColorHint="@color/design_default_color_primary_dark"
            android:layout_marginRight="16dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <EditText
            android:id="@+id/tampung_tanggal"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:ems="10"
            android:hint="Tanggal" />

        <EditText
            android:id="@+id/tampung_jam"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:ems="10"
            android:hint="Waktu" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/vTempat"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/textRuagan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#000"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="Ruangan"/>
            <Spinner
                android:id="@+id/dRuagan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:entries="@array/dataRuangan"
                android:layout_below="@id/textRuagan"
                android:paddingTop="20dp">
            </Spinner>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <Switch
                android:id="@+id/switch1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:text="Alarm"
                android:textSize="14dp"
                android:textStyle="bold"
                android:onClick="aktifAlrm"/>
            <Spinner
                android:id="@+id/id_beritahu"
                android:entries="@array/alarmSebelum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/switch1"
                android:layout_marginLeft="7dp"
                android:visibility="invisible">
            </Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="80dp"
                android:src="@drawable/ceklis" />
        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/item_navigasi" />

</android.support.v4.widget.DrawerLayout>