<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="0dp"
    android:layout_margin="7dp"
    android:elevation="90dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/varKeg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kegiatan : "
                android:paddingLeft="5dp"
                android:textSize="21dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/icon_ruangan" />

                <TextView
                    android:id="@+id/varRuangan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:hint="Ruangan : "
                    android:paddingLeft="40dp"
                    android:textSize="12dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:src="@drawable/icon_tanggal" />

                <TextView
                    android:id="@+id/varTgl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal : "
                    android:paddingLeft="20dp"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:foregroundGravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:src="@drawable/icon_jam" />
                <TextView
                    android:id="@+id/varJam"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Jam : "
                    android:paddingLeft="20dp"
                    android:textSize="12dp" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>